---
// DoubleImageWrapper.astro
import ZoomImage from './ZoomImage.astro';

interface Props {
  imgOne: string;      // Changed from ImageMetadata to string
  imgTwo: string;      // Changed from ImageMetadata to string
  labelOne?: string;
  labelTwo?: string;
  caption?: string;
  width?: number;      // Individual image width
  height?: number;     // Individual image height
}

const { 
  imgOne, 
  imgTwo, 
  labelOne, 
  labelTwo, 
  caption, 
  width = 1200, 
  height = 800 
} = Astro.props;
---

<figure class="my-12 pswp-gallery">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
    <div class="flex flex-col">
      <div 
        aria-hidden="true"
        class="border-t border-black pt-1 mb-2 text-[9px] uppercase tracking-widest text-brand-black/50 font-mono"
      >
        {labelOne || "Source_01"}
      </div>
      <ZoomImage 
        src={imgOne} 
        alt={labelOne || "Image one"} 
        width={width}
        height={height}
        imageClass="border border-black/5"
      />
    </div>

    <div class="flex flex-col">
      <div 
        aria-hidden="true"
        class="border-t border-black pt-1 mb-2 text-[9px] uppercase tracking-widest text-brand-black/50 font-mono"
      >
        {labelTwo || "Source_02"}
      </div>
      <ZoomImage 
        src={imgTwo} 
        alt={labelTwo || "Image two"} 
        width={width}
        height={height}
        imageClass="border border-black/5"
      />
    </div>

  </div>

  {caption && (
    <figcaption class="font-mono text-[10px] mt-4 text-brand-black/60 uppercase leading-relaxed max-w-2xl">
      <span class="sr-only">Description: </span>
      {caption}
    </figcaption>
  )}
</figure>