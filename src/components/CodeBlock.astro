---
interface Props {
  code: string;
  lang?: string;
  filename?: string;
}

const { code, lang = "javascript", filename } = Astro.props;
---

<div class="my-8 group relative" x-data="{ copied: false }">
  <div class="flex items-center justify-between bg-black px-4 py-2 border-x border-t border-black">
    <div class="flex items-center gap-3">
      <div class="flex gap-1.5">
        <div class="w-2 h-2 rounded-full bg-white/20"></div>
        <div class="w-2 h-2 rounded-full bg-white/20"></div>
        <div class="w-2 h-2 rounded-full bg-white/20"></div>
      </div>
      {filename && (
        <span class="font-mono text-[10px] uppercase tracking-widest text-white/50 ml-2">
          {filename}
        </span>
      )}
    </div>
    
    <span class="font-mono text-[9px] uppercase text-white/30 tracking-widest">
      {lang}
    </span>
  </div>

  <div class="relative overflow-hidden border border-black bg-neutral-50">
    <pre class="p-5 overflow-x-auto scrollbar-thin scrollbar-thumb-black/10 selection:bg-black selection:text-white"><code class="font-mono text-[11px] leading-relaxed text-brand-black/90">{code}</code></pre>

    <button 
      @click={`navigator.clipboard.writeText(\`${code}\`); copied = true; setTimeout(() => copied = false, 2000)`}
      class="absolute top-4 right-4 p-2 bg-white border border-black/10 hover:border-black transition-all opacity-0 group-hover:opacity-100 focus:opacity-100"
      aria-label="Copy code"
    >
      <div x-show="!copied" class="flex items-center gap-2">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 012-2v-8a2 2 0 01-2-2h-8a2 2 0 01-2 2v8a2 2 0 012 2z"></path></svg>
        <span class="font-mono text-[9px] uppercase tracking-tighter">Copy</span>
      </div>
      <div x-show="copied" x-cloak class="flex items-center gap-2 text-green-600">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        <span class="font-mono text-[9px] uppercase tracking-tighter">Done</span>
      </div>
    </button>
  </div>
</div>