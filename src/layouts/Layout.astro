---
import SwissGrid from '../components/SwissGrid.astro';
const { title = "Happy Media Strategy" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<style is:global>
			@tailwind base;
			@tailwind components;
			@tailwind utilities;

			@layer base {
				body {
					@apply bg-transparent text-brand-black font-sans antialiased;
				}

				html {
					@apply bg-brand-white;
				}

				h1, h2, h3 {
					@apply font-black uppercase tracking-tightest leading-none;
				}

				.mono {
					@apply font-mono text-[10px] uppercase tracking-widest;
				}
			}
		</style>
	</head>
	<body>
		<slot />
		<SwissGrid />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
