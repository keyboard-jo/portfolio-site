---
import '../styles/global.css';
import SwissGrid from '../components/SwissGrid.astro';
const { title = "Happy Media Strategy" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<SwissGrid />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
<script>
  // Find all links inside the content area that start with http (external)
  const links = document.querySelectorAll('.flex.flex-col.gap-6 a[href^="http"]');
  links.forEach(link => {
    link.setAttribute('target', '_blank');
    link.setAttribute('rel', 'noopener noreferrer');
  });
</script>
